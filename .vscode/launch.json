    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceRoot}",
            "executable": "./build/stm_basic_cmake.elf",
            "name": "Debug F1 (OpenOCD+STlink)",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "interface": "swd",
            "device": "STM32F103CB",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f1x.cfg"
            ],
            "searchDir": [],
            "preLaunchCommands": [
                "monitor poll",
                "monitor reset init",
                "set mem inaccessible-by-default off"
            ],
            "postLaunchCommands": [
                "monitor reset init",
                "monitor sleep 200"
            ],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "rtos": "FreeRTOS",
            "svdFile" : "${workspaceFolder}/system/svd/STM32F103xx.svd"
        },
        {
            "cwd": "${workspaceFolder}",
            "executable": "./build/stm_basic_cmake.elf",
            "name": "Debug F1 (J-Link)",
            "request": "launch",
            "type": "cortex-debug",
            "device": "STM32F103CB",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "jlink",
            "interface": "swd",
            "rtos": "FreeRTOS",
            "svdFile" : "${workspaceFolder}/system/svd/STM32F103xx.svd"
        },
        {
            "cwd": "${workspaceFolder}",
            "executable": "./build/stm_basic_cmake.elf",
            "name": "Debug F4 (J-Link)",
            "request": "launch",
            "type": "cortex-debug",
            "device": "STM32F407VG",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "jlink",
            "interface": "swd",
            "rtos": "FreeRTOS",
            "svdFile" : "${workspaceFolder}/system/svd/STM32F407.svd"
        },
        {
            "cwd": "${workspaceFolder}",
            "executable": "./build/stm_basic_cmake.elf",
            "name": "Debug F0 (J-Link)",
            "request": "launch",
            "type": "cortex-debug",
            "device": "STM32F030C8",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "jlink",
            "interface": "swd",
            "rtos": "FreeRTOS",
            "svdFile" : "${workspaceFolder}/system/svd/STM32F030.svd"
        }
    ]
}